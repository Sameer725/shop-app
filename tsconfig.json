{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "moduleResolution": "node",
    "target": "es2015",
    "module": "CommonJS",
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "resolveJsonModule": true,

    "forceConsistentCasingInFileNames": true,
    "strict": true,

    "experimentalDecorators": true,
    "importHelpers": true,

    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@constants": ["./src/constants"],
      "@constants/*": ["./src/constants/*"],
      "@contexts": ["./src/contexts"],
      "@contexts/*": ["./src/contexts/*"],
      "@graphqlDocuments": ["src/graphqlDocuments"],
      "@graphqlDocuments/*": ["src/graphqlDocuments/*"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],
      "@modules": ["./src/modules"],
      "@modules/*": ["./src/modules/*"],
      "@pages": ["./src/pages"],
      "@pages/*": ["./src/pages/*"],
      "@types": ["./src/types"],
      "@types/*": ["./src/types/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@layouts": ["./src/layouts"],
      "@layouts/*": ["./src/layouts/*"],
      "@routes": ["./src/routes"],
      "@routes/*": ["./src/routes/*"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
